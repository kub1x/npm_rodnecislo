{
  "name": "rodnecislo",
  "version": "1.2.0",
  "description": "A package for handling Czech and Slovak Personal ID",
  "main": "lib/rodnecislo.js",
  "types": "lib/rodnecislo.d.ts",
  "files": [
    "lib/"
  ],
  "keywords": [
    "personal",
    "ID",
    "Czech",
    "node",
    "module"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kub1x/rodnecislo"
  },
  "scripts": {
    "audit": "npm audit",
    "watch": "babel ./src --out-dir ./ --copy-files --watch",
    "build": "babel ./src --out-dir ./ --copy-files",
    "check": "npm outdated --depth 0",
    "coverage": "nyc --reporter=lcov --reporter=text --reporter=html npm test",
    "coveralls": "npm run coverage && cat ./coverage/lcov.info | coveralls && rm -rf ./coverage",
    "github-release": "conventional-github-releaser -p angular",
    "lint": "eslint src test",
    "test": "ava",
    "test:watch": "ava --watch",
    "typescript-test": "tsc --project test",
    "validate": "npm run lint && npm test",
    "prepare": "npm run build && npm run validate && npm run check",
    "pp": "npm run prepare",
    "major": "pmm major",
    "minor": "pmm minor",
    "patch": "pmm patch"
  },
  "author": {
    "name": "Jakub kub1x Podlaha",
    "email": "j.podlaha@gmail.com",
    "url": "http://kub1x.org"
  },
  "pre-commit": [
    "validate"
  ],
  "devDependencies": {
    "ava": "^1.0.1",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.1.2",
    "babel-plugin-transform-function-bind": "^6.22.0",
    "babel-preset-es2015": "^6.24.1",
    "conventional-github-releaser": "^3.1.2",
    "coveralls": "^3.0.0",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^5.1.0",
    "nyc": "^12.0.2",
    "pmm": "^2.0.0",
    "pre-commit": "^1.2.2",
    "sinon": "^6.1.3",
    "typescript": "^2.6.2"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "ava": {
    "files": [
      "test/*.js"
    ],
    "source": [
      "src/**/*.js"
    ],
    "require": "babel-core/register"
  }
}
